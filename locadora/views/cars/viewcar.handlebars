<div class="title">
    <h1>Todos os veículos</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Nome</th>
      <th scope="col">Modelo</th>
      <th scope="col">Motor</th>
      <th scope="col">Ano</th>
      <th scope="col">Fabricante</th>
      <th scope="col">Valor</th>
      <th scope="col">Cor</th>
      <th scope="col">Opcionais</th>
      <th scope="col">Acões</th>
    </tr>
  </thead>
  <tbody>
    {{#each cars}}
    <tr>      
      <td>{{this.nome}}</td>
      <td>{{this.modelo}}</td>
      <td>{{this.motor}}</td>
      <td>{{this.ano}}</td>
      <td>{{this.fabricante}}</td>
      <td>{{this.valor}}</td>
      <td>{{this.cor}}</td>
      <td>{{this.opcionais}}</td>
      <td>
        <div class="col-md-4 actions">
        <a href="/cars/edit/{{this.id}}">
          {{> edit_car}}
        </a>
        <form action="/cars/remove" method="post">
          <input type="hidden" name="id" value="{{this.id}}">
          <button type="submit" class="btn-delete">
            {{> del_car}}
          </button>
        </form>
      </div>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
